<div class="container">
    <div class="row">
        
        <div class="col">
        <h2>商品一覧</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= link_to item.name ,admin_item_path(item.id) %></td>
                    <td><%= item.price.to_s %></td>
                    <td><%= item.genre.name %></td>
                    <td>
                        <% if item.is_active == false %>
                        販売停止中
                        <% else %>
                        販売中
                        <% end %>
                    </td>
                </tr>
                <% end %>
            <%= paginate @items %>
            </tbody>
        </table>
        </div>
        
    </div>
</div>