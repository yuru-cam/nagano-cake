<div class="container">
  <div class="col">
    <div class="row">
    <div class="col">
     <h2>商品新規登録</h2>
     
      <div class="col">
        <%= form_with model:@item, url:admin_items_path, method: :post, local:true do |f| %>
        <table class="new-form-table">
          <tbody>
            <tr>
              <th>商品画像</th>
              <td><%= f.attachment_field :item_image %></td>
            </tr>
            
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :body, class: "form-control" %></td>
            </tr>
            
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>
            
            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price, class: "form-control" %></td>
            </tr>
            
            <tr>
              <th>販売ステータス</th>
              <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active,"販売中" %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active,"販売停止" %>
              </td>
            </tr>
          </tbody>
        </table>
        <!--新規投稿ボタン-->
        <div>
        <%= f.submit "新規登録" ,class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>