<div class="title">
  <h4><%= @customer.full_name %>さんの会員詳細</h4>
</div>

<%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
<table class="information">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id%></td>
  </tr>
  
  <tr>
    <th>氏名</th>
    <td><%= f.text_field :last_name, autofocus: true %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  
  <tr>
    <th>フリガナ</th>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>
  
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postcode %></td>
  </tr>
  
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :phone_number %></td>
  </tr>
  
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  
  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会" %>
    </td>
  </tr>
</table>

<%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>

