<h4 style="margin: 10px 10px;">会員一覧</h4>

<table class="table table-striped",style="margin: 10px 180px;">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customer.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.full_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted == false %>
          <span style="color: green">有効</span>
        <% else %>
          <span style="opacity: 0.5">退会</span>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<%= paginate @customer %>