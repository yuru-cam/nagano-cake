<div class="title", style="margin: 20px 60px;">
  <h4><%= @customer.full_name %>さんの会員詳細</h4>
</div>


<table class="information", style="margin: 10px 60px; background-color: white;">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id%></td>
  </tr>

  <tr>
    <th>氏名</th>
    <td><%= @customer.full_name %></td>
  </tr>

  <tr>
    <th>フリガナ</th>
    <td><%= @customer.full_name_kana %></td>
  </tr>

  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postcode %></td>
  </tr>

  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone_number%></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>

  <tr>
    <th>会員ステータス</th>
    <td>
      <% if @customer.is_deleted == false %>
        <span style="color: green">有効</span>
      <% else %>
        <span style="opacity: 0.5">退会</span>
      <% end %>
    </td>
  </tr>
  
  <tr>
    <th></th>
    <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></td>
    <td><%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %></td>
  </tr>
</table>





