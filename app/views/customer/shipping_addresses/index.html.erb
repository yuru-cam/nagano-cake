<div class="container">
<div class="row">
    <div class="col">
      <h3><strong>配送先登録/一覧</strong></h3>
        <%= form_with model: @shipping_address do |f| %>
            <div class="shipping_addres">
                <div class="form-group">
                    <%= f.label :"郵便番号(ハイフンなし)" ,class: "control-label" %>
                    <%= f.text_field :shipping_postcode, class: "form-control-static postal_code" %>
                </div>

                <div class="form-group">
                    <%= f.label :"住所" ,class: "control-label" %>
                    <%= f.text_field :shipping_address, class: "form-control-static address" %>
                </div>

                <div class="form-group">
                    <%= f.label :"宛名" ,class: "control-label" %>
                    <%= f.text_field :shipping_name, class: "form-control-static name" %>
                </div>
                <%= f.submit '新規登録' ,class: " pull-right btn-lg btn-success " %>
            </div>
        <% end %>
    </div>
</div>


<div class="row">
    <div class="col">
        <table class="table table-hover table-bordered">
        <thead>
            <tr class="address-info">
                <th class="col">郵便番号</th>
                <th class="col">住所</th>
                <th class="col">宛名</th>
                <th class="col"></th>
            </tr>
        </thead>
        <tbody>
            <% @shipping_addresses.each do |shipping_address| %>
              <tr>
                <td class="col"><%= shipping_address.shipping_postcode %></td>
                <td class="col"><%= shipping_address.shipping_address %></td>
                <td class="col"><%= shipping_address.shipping_name %></td>
                <td class="col">
                    <%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
                    <%= link_to "削除する", shipping_address_path(shipping_address), method: :DELETE, class: "glyphicon glyphicon-trash btn-sm btn-danger" %>
                </td>
              </tr>    
            <% end %>
        </tbody>
        </table>
        </div>
    </div>

</div>