

<!--bootstrapのレイアウト記述、ちゃんと反映できるか確認-->
<div class="cart_container" style="width:90%; margin: 20px auto; position:relative;">

<strong style="font-size:18px;">
	<img src="/assets/cart_icon.jpg" style="display:inline-block; height: 25px;">
	ショッピングカート
</strong>

<div class="row" style="width:100%; height:20px;"></div>

<div style="position:absolute; top: 30px; right: 0;">
	<%= link_to cart_items_path, method: :delete do %>
		<span class="btn btn-danger">カートを空にする</span>
	<% end %>
</div>

<!--<%#= form_with model:@cart_items,url: order_items_path, method: :patch do |f| %>-->
<table class="table table-bordered">
	<thead style="background:#dad7d7; border: 1px solid #fff;">
		<th>商品名</th>
		<th>単価(税込)</th>
		<th>数量</th>
		<th>小計</th>
	</thead>
	
	<tbody>
		<% @sum = 0 %>
 	<% @cart_items.each do |cart_item| %>
	<tr>
		<td>
			<!--<%#= attachment_image_tag cart_items.item, :item_image, :fill, 50, 50 %>-->
			<!--<%#= cart_item.item.name %>-->
		</td>
		<td>
 			<!--<%#= (cart_item.item.price * 1.1).floor %>-->
 			<%= cart_item.item.with_tax_price %>
		</td>
		<td>
			<!--<%#= hidden_field_tag "genre_id[#{item.id}]", item.genre_id %>-->
			<%= number_field_tag "quantity[#{item.id}]", item.quantity, in: 1..10 %>
		</td>
		<td>
			<!--<%#= (cart_item.item.price * 1.1).floor * cart_item.amount %>-->
			<!--<%#= cart_item.subtotal %>-->
			<% @sum +=  cart_item.subtotal %>
		</td>
		<td><%= link_to '削除する', cart_item_path(item), method: :delete %></td>
	</tr>
 	<% end %>
 </tbody>
</table>

<div class="row">
	<div class="col-xs-4">
		<%= link_to root_path do %>
			<span class="btn btn-info glyphicon glyphicon-chevron-left">買い物を続ける</span>
		<% end %>
	</div>
	<div class="col-xs-4 pull-right">
		<table class="table table-striped">
			<tr style="background:#dad7d7; border: 1px solid #fff;"><th>合計金額</th></tr>
			<tr><td><%= @total %></td></tr>
		</table>



	</div>

</div>



<!-- カートに商品が入っていたら表示させる -->

	<% if @cart_items.blank? %>
		<% else %>
		<div class="text-center">
			<%= link_to '購入に進む', new_order_path, class:"btn btn-success" %>
		</div>
	<% end %>

</div>

