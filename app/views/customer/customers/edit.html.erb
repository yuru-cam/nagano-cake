<h4>会員情報編集</h4>

<table class="information">
<%= form_with model:@customer, url:customers_path, local:true do |f| %>
  <tr>
    <th>氏名</th>
    <td>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </td>
  </tr>
  
  <tr>
    <th>フリガナ</th>
    <td>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  
  <tr>
    <th>郵便番号</th>
    <td>
      <%= f.text_field :postcode %>
    </td>
  </tr>
  
  <tr>
    <th>住所</th>
    <td>
      <%= f.text_field :address %>
    </td>
  </tr>
  
  <tr>
    <th>電話番号</th>
    <td>
      <%= f.text_field :phone_number %>
    </td>
  </tr>
 
  <tr>
    <th>メールアドレス</th>
    <td>
      <%= f.email_field :email %>
    </td>
  </tr>

  <tr>
    <th></th>
    <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
    <td><%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %></td>
  </tr>

<% end %>
</table>


